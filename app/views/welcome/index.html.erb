<div class="row">
  <div class="col-xs-12 center">
    <div id="welcomeWrapper">
      <% unless user_signed_in? %>
        <div class="jumbotron">
          <h1 class="display-3">Welcome to BlackBox</h1>
          <p class="lead">BlackBox is a data aggregation platform for you!</p>
          <hr class="m-y-md">
          <p class="lead">
            <%= link_to user_omniauth_authorize_path("twitter"), :class=>"btn btn-primary btn-lg" do%>
              <i class="fa fa-twitter"></i> Twitter Sign In
            <%end%>
          </p>
        </div>
      <%end%>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <div class="jumbotron">
    <h1 class="display-3 center">Welcome to BlackBox</h1>
    <p class="lead center">BlackBox is a data aggregation platform for you! Currently signed on as <%= current_user.email%></p>
    <hr class="m-y-md">
    <p class="lead right">
      <%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class=>"btn btn-primary btn-lg" %><br>
    </p>
  </div>

  <div class="card-deck-wrapper">
    <div class="card-deck">
      <div class="card">

        <div class="car-img-top card-icon"><i class="fa fa-facebook"></i></div>
        <div class="card-block">
          <h4 class="card-title">Facebook</h4>
          <p class="card-text">Sign into Facebook to add your posts, family members, and pictures to your BlackBox!</p>
          <div class="card-link">
            <% unless @facebook.present? %>
              <%= link_to "Facebook Login", user_omniauth_authorize_path(:facebook), :class=>"btn btn-primary"  %>
            <%else%>
              <%= link_to "#", :class=>"btn btn-primary disabled" do%>
                Facebook
              <%end%>
              <p class="card-text left"><small class="text-muted">Signed in as: <%= @facebook.first.username %></small></p>
            <%end%>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="car-img-top card-icon"><i class="fa fa-twitter"></i></div>
        <div class="card-block">
          <h4 class="card-title">Twitter</h4>
          <p class="card-text">Sign into Twitter to add your tweets to your BlackBox!</p>
          <div class="card-link">
            <% unless @twitter.present? %>
              <%= link_to "Twitter Login", user_omniauth_authorize_path(:twitter), :class=>"btn btn-primary" %><br>
            <%else%>
              <%= link_to "#", :class=>"btn btn-primary disabled" do%>
                Twitter
              <%end%>
              <p class="card-text left"><small class="text-muted">Signed in as: <%= @twitter.first.username %></small></p>
            <%end%>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="car-img-top card-icon"><i class="fa fa-foursquare"></i></div>
        <div class="card-block">
          <h4 class="card-title">Foursquare</h4>
          <p class="card-text">Sign into Foursquare to add your checkins and photos to your BlackBox!</p>
          <div class="card-link">
            <% unless @foursquare.present? %>
              <%= link_to "Foursquare Login", user_omniauth_authorize_path(:foursquare), :class=>"btn btn-primary" %><br>
            <%else%>
              <%= link_to "#", :class=>"btn btn-primary disabled" do%>
                Foursquare
              <%end%>
              <p class="card-text left"><small class="text-muted">Signed in as: <%= @foursquare.first.username %></small></p>
            <%end%>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="car-img-top card-icon"><i class="fa fa-github"></i></div>
        <div class="card-block">
          <h4 class="card-title">Github</h4>
          <p class="card-text">Add your github commits and public projects to your BlackBox!</p>
          <div class="card-link">
            <% unless @github.present? %>
              <%= link_to "Github Login", user_omniauth_authorize_path(:github), :class=>"btn btn-primary" %><br>
            <%else%>
              <%= link_to "#", :class=>"btn btn-primary disabled" do%>
                Github
              <%end%>
              <p class="card-text left"><small class="text-muted">Signed in as: <%= @github.first.username %></small></p>
            <%end%>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="car-img-top card-icon"><i class="fa fa-bicycle"></i></div>
        <div class="card-block">
          <h4 class="card-title">Fitbit</h4>
          <p class="card-text">Sign onto Fitbit to track activities, and workouts to your BlackBox!</p>
          <div class="card-link">
            <% unless @fitbit.present? %>
              <%= link_to "Fitbit Login", user_omniauth_authorize_path(:fitbit), :class=>"btn btn-primary" %><br>
            <%else%>
              <%= link_to "#", :class=>"btn btn-primary disabled" do%>
                Fitbit
              <%end%>
              <p class="card-text left"><small class="text-muted">Signed in as: <%= @fitbit.first.username %></small></p>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if @timeline.present? %>
    <hr>
    <h1> Timeline</h1>
    <div class="table-responsive">
      <table class="table table-sm table-striped">
        <tr>
          <td>ID</td>
          <td>Provider</td>
          <td>Kind</td>
          <td>Title</td>
          <td>Body</td>
          <td>Date/Time</td>
          <td>Log</td>
        </tr>
        <% @timeline.each do |post| %>
          <tr>
            <td>
              <%= link_to post.external_link do %>
                <%= post.id %>
              <%end%>
            </td>
            <td><%= post.provider%></td>
            <td><%= post.kind%></td>
            <td><%= post.title%></td>
            <td><%= post.body%></td>
            <td><%= post.created_at%></td>
            <td><%= truncate(post.log, length:100)%></td>
          </tr>
        <%end%>
      </table>
    </div>
    <%= link_to "Export Timeline", root_path(:format => :csv ), :class=>"btn btn-primary pull-right" %>
  <%end%>
<%else%>

<%end%>

