<div id ="fitbitChannel" class="row">
  <div class="row">
    <div class="col-xs-12">
      <h1><i class="fa fa-heartrate"></i> Fitbit</h1>
    </div>
  </div>
  <div class="row">
    <% if @fitbit.present? %>
      <%= link_to sign_out_provider_path(:provider => "fitbit_oauth2") do%>
        <h3 class="pull-right">Sign Out Fitbit</h3>
      <%end%>
      <h2><%= @userFitbit.count%> Fitbit Data</h2>
      <div class="row">
        <div class="col-sm-6">
          <!-- SHOW GRAPH HERE -->
        </div>
        <div class="col-sm-6">
          <!-- SHOW GRAPH HERE -->
        </div>
      </div>
      <h5 class="pull-right">
        <%= link_to fitbit_heart_path do%>
          <i class="fa fa-refresh"></i> Update
        <%end%>|
        <%= link_to fitbit_path(:format => :csv ) do%>
          Export Data
        <%end%>
      </h5>
      <!-- <%= link_to fitbit_heart_path do%>
        <h3 class="pull-right"><i class="fa fa-refresh"></i> Update Heart</h3>
      <%end%> -->
      <% if @userFitbit.present? %>
        <h3>Raw Data</h3>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Kind</th>
              <th>Body</th>
              <th>Created</th>
            </tr>
          </thead>
          <tbody>
            <% @userFitbit.each do |fitbit| %>
              <tr>
                <td><%= fitbit.kind%></td>
                <td>
                  <%= link_to fitbit.external_link do %>
                  <%= fitbit.body %>
                  <%end%>
                </td>
                <td><%= fitbit.created_at.strftime("%F") %></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      <%end%>

    <%else%>
      <div id = "signedOutChannel">
        <div class="channelHeader center">
          <%= link_to user_omniauth_authorize_path(:fitbit_oauth2) do%>
            <h1> Sign On </h1>
          <%end%>
        <hr>
        </div>
        <div class="channelRequests col-xs-6">
          <h4>This channel requests</h4>
          <ul>
            <li>Profile information</li>
            <li>Fitbit history</li>
          </ul>
        </div>
        <div class="channelAbility col-xs-6">
          <h4>With this channel you can</h4>
          <ul>
            <li>Track your Fitbit history</li>
            <li>Export Fitbit data to csv</li>
          </ul>
        </div>
      </div>
    <%end%>
  </div>
</div>
