<div class="container">
  <div id ="facebookChannel" class="row">
    <div class="row">
      <div class="col-xs-12">
        <h1><i class="fa fa-facebook"></i> Facebook</h1>
      </div>
    </div>
    <div class="row">
      <% if @facebook.present? %>
        <%= link_to sign_out_provider_path(:provider => "facebook") do%>
          <h3 class="pull-right">Sign Out Facebook</h3>
        <%end%>
        <h2><%= @userFacebook.total_count%> Posts</h2>
        <div class="row">
          <div class="col-sm-6">
            <%= column_chart @allUserFacebook.group_by_month(:created_at, format: "%b %y").count %>
          </div>
          <div class="col-sm-6">
            <%= pie_chart @allUserFacebook.group(:kind).count %>
          </div>
        </div>
        <h5 class="pull-right">
          <%= link_to all_facebook_path do%>
            <i class="fa fa-refresh"></i> Update
          <%end%>|
          <%= link_to facebook_path(:format => :csv ) do%>
            Export Data
          <%end%>
        </h5>
        <% if @userFacebook.present? %>
          <h3>Raw Data</h3>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Kind</th>
                <th>Body</th>
                <th>Lat Lng</th>
                <th>Created</th>
              </tr>
            </thead>
            <tbody>
              <% @userFacebook.each do |post| %>
                <tr>
                  <td>
                    <%= post.kind%>
                  </td>
                  <td>
                    <%= link_to post.external_link do %>
                      <%= post.body %>
                    <%end%>
                  </td>

                  <td><%= post.latitude %> <%= post.longitude %></td>
                  <td><%= post.created_at.strftime("%F") %></td>
                </tr>
              <%end%>
            </tbody>
          </table>
          <%= paginate @userFacebook %>
        <%end%>

      <%else%>
        <div id = "signedOutChannel">
          <div class="channelHeader center">
            <%= link_to user_omniauth_authorize_path(:facebook) do%>
              <h1> Sign On </h1>
            <%end%>
          <hr>
          </div>
          <div class="channelRequests col-xs-6">
            <h4>This channel requests</h4>
            <ul>
              <li>Profile information</li>
              <li>Post history</li>
              <li>Family History</li>
            </ul>
          </div>
          <div class="channelAbility col-xs-6">
            <h4>With this channel you can</h4>
            <ul>
              <li>Track your post history</li>
              <li>Export posts to csv</li>
            </ul>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
