<div id ="twitterChannel" class="row">
  <div class="row">
    <div class="col-xs-12">
      <h1><i class="fa fa-twitter"></i> Twitter</h1>
    </div>
  </div>
  <div class="row">
    <% if @twitter.present? %>
      <%= link_to sign_out_provider_path(:provider => "twitter") do%>
        <h3 class="pull-right">Sign Out Twitter</h3>
      <%end%>
      <h2><%= @userTwitter.total_count%> Tweets</h2>
      <div class="row">
        <div class="col-sm-6">
          <%= line_chart @allUserTwitter.group_by_month(:created_at, format: "%b %e %Y").count %>
        </div>
        <div class="col-sm-6">
          <%= pie_chart @allUserTwitter.group(:kind).count %>
        </div>
      </div>
      <h5 class="pull-right">
        <%= link_to twitter_tweets_path do%>
          <i class="fa fa-refresh"></i> Update
        <%end%>|
        <%= link_to twitter_path(:format => :csv) do%>
          Export Data
        <%end%>
      </h5>
      <% if @userTwitter.present? %>
        <h3>Raw Data</h3>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Body</th>
              <th>Latitude</th>
              <th>Longitude</th>
              <th>Created</th>
            </tr>
          </thead>
          <tbody>
            <% @userTwitter.each do |tweet| %>
              <tr>
                <td>
                  <%= link_to tweet.external_link do %>
                  <%= tweet.body %>
                  <%end%>
                </td>

                <td><%= tweet.latitude %></td>
                <td><%= tweet.longitude %></td>
                <td><%= tweet.created_at.strftime("%F") %></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      <%= paginate @userTwitter %>
      <%end%>
    <%else%>
      <div id = "signedOutChannel">
        <div class="channelHeader center">
          <%= link_to user_omniauth_authorize_path(:twitter) do%>
            <h1> Sign On </h1>
          <%end%>
        <hr>
        </div>
        <div class="channelRequests col-xs-6">
          <h4>This channel requests</h4>
          <ul>
            <li>Profile information</li>
            <li>Tweet history</li>
          </ul>
        </div>
        <div class="channelAbility col-xs-6">
          <h4>With this channel you can</h4>
          <ul>
            <li>Track your tweeting history</li>
            <li>Export tweets to csv</li>
          </ul>
        </div>
      </div>
    <%end%>
  </div>
</div>
