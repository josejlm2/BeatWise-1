<!DOCTYPE html>
<html>
  <head>
    <title>BlackBox</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="bodyWrapper">
      <div id="flashWrapper">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %> center"><%= value %></div>
        <% end %>
      </div>

      <div id="mainWrapper">
        <%= yield %>
      </div>
    </div>

    <div id="footerWrapper">
      <hr>
      <div class="row">
        <div class="col-xs-4">
          <h5>
            <i class="fa fa-heart"></i> 2015
          </h5>
        </div>
        <div class="col-xs-4">
          <h5 class="center">
            <!--  -->
          </h5>
        </div>
        <div class="col-xs-4">
          <h5 class="right">
            <a href ="#bodyWrapper">TOP <i class="fa fa-chevron-up"></i></a>
          </h5>
        </div>
      </div>
    </div>
  </body>
</html>
