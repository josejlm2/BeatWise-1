<!DOCTYPE html>
<html>
  <head>
    <title>BlackBox</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container-fluid">
      <div id="bodyWrapper">

        <div id="flashWrapper">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %> center"><%= value %></div>
          <% end %>
        </div>

        <div id="mainWrapper">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
  <div id="footerWrapper" class='row'>
    <div id = "lifeLogging" class="col-xs-4">
      <h4>Black<span class="yellow">Box</span></h4>
      <hr>
      <h5><i class="fa fa-heart"></i> 2015</h5>
    </div>
    <div id = "aboutUs" class="col-xs-4">
      <h4>About</h4>
      <hr>
      <h5>About Us</h5>
      <h5>Blog</h5>
      <h5>Privacy</h5>
    </div>
    <div id = "connectSocial" class="col-xs-4">
      <h4>Connect</h4>
      <hr>
      <h5><i class="fa fa-twitter"></i> Twitter</h5>
      <h5><i class="fa fa-facebook"></i> Facebook</h5>
    </div>
    <div id="topButton">
      <a href ="#bodyWrapper"><i class="fa fa-chevron-up"></i></a>
    </div>
  </div>

</html>
